<div class="modal fade" id="modalDistance" tabindex="-1" role="dialog" aria-labelledby="modalDistanceLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalDistanceLabel">Distance between airports</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label>Airport #1</label>
                            <input type="text" id="txtAiportOrigin" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Airport #2</label>
                            <input type="text" id="txtAiportDestination" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label>Distance in Kms: </label>
                            <label id="lblDistanceResult"></label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <a href="#" target="_blank" id="lnkDistanceGetUrlValue"></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnCloseDistance">Close</button>
                <button type="button" class="btn btn-warning" id="btnResetDistance">Reset</button>
                <button type="button" class="btn btn-primary" id="btnGetDistance">Get distance</button>
            </div>
        </div>
    </div>
</div>