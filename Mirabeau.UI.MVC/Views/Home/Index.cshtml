@model IEnumerable<Mirabeau.UI.MVC.Models.AirportViewModel>

@{
    Layout = null;
    ViewBag.Title = "List of European Airports";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Content/Bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/Bootstrap/js/bootstrap.min.js"></script>
    <style>
        .loading-background {
            display: none;
            position: fixed;
            z-index: 1051;
            width: 100%;
            height: 100%;
            background-color: black;
            background-color: rgba(0,0,0,.50)
        }

        .loading-container {
            position: absolute;
            left: 45%;
            top: 50%;
            /*margin-left: -150px;*/
        }
    </style>
</head>
<body>

    <div class="loading-background">
        <div class="loading-container">
            <img src="~/Content/images/loading.gif" style="width: 100px;" />
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="https://www.mirabeau.nl/">Mirabeau</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Dropdown
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </li>
            </ul>
            @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { @class = "form-logout" }))
            {
                <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Logout</button>
            }
        </div>
    </nav>

    <table class="table" id="tbl-airports">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Continent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IATA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ISO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Latitude)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Longitude)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody></tbody>

    </table>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script>

        $(document).ajaxStart(function () {
            startAjaxLoading();
        });

        $(document).ajaxStop(function () {
            stopAjaxLoading();
        });

        function startAjaxLoading() {
            $(".loading-background").fadeIn().css("display", "flex");
        }

        function stopAjaxLoading() {
            $(".loading-background").fadeOut();
        }


        $(function () {

            $("#tbl-airports > tbody").load("@Url.Action("GetEuropeanAirports", "Home")");

            @*$.ajax({
                url: "@Url.Action("GetEuropeanAirports", "Home")",
                type: "GET",
                success: function () {
                    alert("hi");
                },
                error: function (xhr, textStatus, errorThrown) {
                    alert("ERROR!\n" + xhr + "\n" + textStatus + "\n" + errorThrown);
                }
            });*@
        });
    </script>
</body>
</html>
